{
  "manifest_version": 3,
  "name": "AI Fact-Checker",
  "version": "1.0",
  "description": "Fact-check articles and posts in real-time using AI",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "commands"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.x.ai/*",
    "wss://*/*",
    "https://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    },
    {
      "matches": ["*://*.twitter.com/*", "*://*.x.com/*"],
      "js": ["twitter.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "fact-check-selected": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "Fact-check selected text"
    },
    "fact-check-page": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Fact-check current page"
    }
  }
}